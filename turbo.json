{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": ["**/.env.*local"],
    "pipeline": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**", ".next/**"]
        },
        "lint": {},
        "dev": {
            "cache": false,
            "persistent": true
        }
    },
    "globalEnv": [    
        "NEXT_PUBLIC_BASE_URL",
        "NEXT_PUBLIC_GOOGLE_ANALYTICS",
        "NODE_ENV"
    ]
}
