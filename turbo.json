{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": ["**/.env.*local"],
    "pipeline": {
        "build": {
            "dependsOn": ["^build"],
            "env": [
                "NEXT_PUBLIC_BASE_URL",
                "NODE_ENV"
            ],
            "outputs": [".next/**", "!.next/cache/**", "storybook-static/**"]
        },
        "lint": {},
        "dev": {
            "cache": false,
            "persistent": true
        }
    }
}
