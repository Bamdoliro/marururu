{
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky install",
    "lighthouse": "lhci autorun"
  },
  "name": "marururu",
  "packageManager": "pnpm@8.6.7",
  "workspaces": [
    "apps/*",
    "packages/*",
    "configs/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^17.8.0",
    "@commitlint/config-conventional": "^17.8.0",
    "@lhci/cli": "^0.12.0",
    "@maru/eslint": "workspace:*",
    "@turbo/gen": "^1.9.7",
    "eslint": "^7.32.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.0.1",
    "prettier": "^2.5.1",
    "turbo": "latest"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "pnpm format",
      "pnpm lint"
    ]
  }
}
